{
    "targets": [
        {
            "out": "builds/macos-arm64",
            "OS": "darwin",
            "architecture": "arm64"
        },
        {
            "out": "builds/linux-x86_64",
            "OS": "linux",
            "architecture": "x86_64"
        }
    ],
    "optimizations": {
        "compile-time-calculations": false,
        "inlining": false
    },
    "format-on-build": true,
    "format-options": {
        "indent": 4,
        "max-line-length": 120
    },
    "enforced-style": {
        "require-manual-types": true,
        "require-return-in-function": true
    }
}