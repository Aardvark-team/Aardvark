{
    "targets": [
        {
            "out": "builds/macos-arm64",
            "OS": "darwin",
            "architecture": "arm64"
        },
        {
            "out": "builds/linux-x86_64",
            "OS": "linux",
            "architecture": "x86_64"
        }
    ],
    "entrypoint": "source/main.adk",
    "optimizations": {
        "compile-time-calculations": false,
        "inlining": false
    },
    "format-on-build": true,
    "format-options": {
        "indent": 4,
        "max-line-length": 120
    },
    "enforced-style": {
        "require-type-annotations": true,
        "require-function-return-type-annotation": true,
        "force-pure-functions": false,
        "allow-embeds": false,
        "allow-keyword-arguments": true,
        "allow-positional-arguments": false,
        "force-keyword-arguments": true
    }
}